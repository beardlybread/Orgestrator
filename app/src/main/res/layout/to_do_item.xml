<?xml version="1.0" encoding="utf-8"?>
<com.github.beardlybread.orgestrator.ui.ToDoView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:layout_margin="5dp"
    android:onClick="toggleToDo"
    android:background="@color/todo_default" >

    <CheckBox
        android:id="@+id/to_do_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:clickable="false" />


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/to_do_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/to_do_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:gravity="center" />

            <TextView
                android:id="@+id/to_do_path"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:gravity="right" />

        </LinearLayout>

    </LinearLayout>

</com.github.beardlybread.orgestrator.ui.ToDoView>
